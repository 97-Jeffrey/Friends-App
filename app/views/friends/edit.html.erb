<h1 class="mb-5">Change Friend Info</h1>

<%= form_for :friend, url: friend_path(@friend), method: :patch do |f| %>
 
  <% if @friend.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@friend.errors.count, "error") %> prohibited
        this friend info from being saved:
      </h2>
      <ul>
        <% @friend.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :first_name, class:"h3"%><br>
    <%= f.text_field :first_name, class:"form-control" %>
  </p>
 
  <p>
    <%= f.label :last_name, class:"h3" %><br>
    <%= f.text_area :last_name, class:"form-control"  %>
  </p>
  <p>
    <%= f.label :email, class:"h3" %><br>
    <%= f.text_area :email, class:"form-control"  %>
  </p>

  <p>
    <%= f.label :phone_number, class:"h3" %><br>
    <%= f.text_area :phone_number, class:"form-control"  %>
  </p>
  <p>
    <%= f.label :twitter, class:"h3" %><br>
    <%= f.text_area :twitter, class:"form-control"  %>
  </p>
 
  <p>
    <%= f.submit class:"btn btn-secondary"%>
  </p>
 
<% end %>
 
<%= link_to 'Back', friends_path, class:"btn btn-primary"%>