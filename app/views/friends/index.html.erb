<h1>All My Friends</h1>

<%= link_to "Add a Friend", new_friend_path, class:"btn btn-secondary mt-3 mb-4" %>
<table class="table table-striped table-bordered">
 <thead class="thead-dark">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Twitter</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 </thead>
 <tbody>
    <% @friends.each do |friend| %>
    <tr>
      <td><%= friend.first_name %></td>
      <td><%= friend.last_name %></td>
      <td><%= friend.email %></td>
      <td><%= friend.phone_number %></td>
      <td><%= friend.twitter %></td>
      <td><%= link_to "Show", friend_path(friend), class:"btn btn-primary"%></td>
      <td><%= link_to "Edit", edit_friend_path(friend), class:"btn btn-warning"%></td>
      <td><%= link_to 'Delete', friend_path(friend),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class:"btn btn-danger"
              %></td>
    </tr>
  <% end %>
  </tbody>
</table>