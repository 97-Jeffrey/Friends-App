<h1>All My Friends</h1>
<% if user_signed_in?%>
<%= link_to "Add a Friend", new_friend_path, class:"btn btn-secondary mt-3 mb-4" %>
<table class="table table-striped table-bordered">
 <thead class="table-dark">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Twitter</th>
    <th>User Id</th>
    <th colspan="3"></th>
  </tr>
 </thead>
 <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
    <tr>
      <td><%= friend.first_name %></td>
      <td><%= friend.last_name %></td>
      <td><%= friend.email %></td>
      <td><%= friend.phone_number %></td>
      <td><%= friend.twitter %></td>
      <td><%= friend.user_id %></td>
      <td><%= link_to "Show", friend_path(friend), class:"btn btn-primary"%></td>
      <td><%= link_to "Edit", edit_friend_path(friend), class:"btn btn-secondary"%></td>
      <td><%= link_to 'Delete', friend_path(friend),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class:"btn btn-danger"
              %></td>
    </tr>

    <% end%>
  <% end %>
  </tbody>
</table>
<% else %>
  <div class="alert alert-warning mt-5"> You need to sign in first!</div>
  <%= link_to "Sign in", new_user_session_path, class:"btn btn-secondary mt-3"%>
<% end %>